<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/daftar_mhs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:text="Daftar Mahasiswa"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Pastikan data yang anda inputkan
\nSesuai dengan data PDDIKTI
\nhttps://pddikti.kemdikbud.go.id/"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daftar_mhs" />

            <EditText
                android:id="@+id/inputUsernameDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Username"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keterangan" />

            <EditText
                android:id="@+id/inputPasswordDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputUsernameDaftarMhs" />

            <EditText
                android:id="@+id/inputNamaLengkapDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Nama Lengkap"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPasswordDaftarMhs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inputNIMDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:hint="NIM"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputNamaLengkapDaftarMhs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inputPerguruanTinggiDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Perguruan Tinggi"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputNIMDaftarMhs" />

            <Button
                android:id="@+id/btnDaftarMhs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Daftar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="#2B87FF"
                app:layout_constraintTop_toBottomOf="@+id/inputPerguruanTinggiDaftarMhs" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>