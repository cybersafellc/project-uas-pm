<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/daftar_dosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:text="Daftar Dosen"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Pastikan data yang anda inputkan
\nSesuai dengan data PDDIKTI
\nhttps://pddikti.kemdikbud.go.id/"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/daftar_dosen" />

            <EditText
                android:id="@+id/inputUsernameDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Username"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keterangan" />

            <EditText
                android:id="@+id/inputPasswordDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputUsernameDaftarDosen" />

            <EditText
                android:id="@+id/inputNamaLengkapDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:hint="Nama Lengkap"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPasswordDaftarDosen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inputNIDNDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:hint="NIDN"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:background="@drawable/input_bg"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputNamaLengkapDaftarDosen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inputPerguruanTinggiDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:hint="Perguruan Tinggi"
                android:padding="5dp"
                android:background="@drawable/input_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputNIDNDaftarDosen" />

            <Button
                android:id="@+id/btnDaftarDosen"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Daftar"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="#2B87FF"
                app:layout_constraintTop_toBottomOf="@+id/inputPerguruanTinggiDaftarDosen" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>