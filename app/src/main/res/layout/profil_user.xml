<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoProfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textProfil"
                android:background="@drawable/circle_shape"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/close_button" />

            <TextView
                android:id="@+id/textProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Profile Saya"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/input_bg"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fotoProfil" />

            <EditText
                android:id="@+id/editNamaLengkap"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/input_bg"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Nama Lengkap"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editUsername" />

            <EditText
                android:id="@+id/editNIM"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/input_bg"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="NIM"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNamaLengkap" />

            <EditText
                android:id="@+id/editAsalPT"
                android:layout_width="350dp"
                android:textColor="@color/black"
                android:textColorHint="@color/light_grey"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/input_bg"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Asal Perguruan Tinggi"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNIM" />

            <Button
                android:id="@+id/btnSimpanEditProfil"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:textColor="@color/white"
                android:text="Simpan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editAsalPT"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2B87FF"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>